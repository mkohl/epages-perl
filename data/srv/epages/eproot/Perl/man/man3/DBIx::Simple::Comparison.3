\& $sth\->{$foo}     =  $result\->attr($foo)
\&
\& func             =  func
\&
\& begin_work       =  begin_work
\& commit           =  commit
\& rollback         =  rollback
\& last_insert_id   =  last_insert_id
\& rows             =  rows
\&
\& disconnect       ~  disconnect
\& finish           ~  finish
.Ve
